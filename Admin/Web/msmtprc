# Valeurs par défaut pour tous les comptes.
defaults
auth           on
logfile        ~/.msmtp.log

# Exemple pour un compte Gmail
account        gmail
host           smtp.gmail.com
port           587
from           contact.managis@gmail.com
user           contact.managis@gmail.com
password       plain-text-password

# Définir le compte par défaut
account default : nvEF56Ta7